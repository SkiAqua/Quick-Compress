<Window x:Class="Quick_Compress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quick_Compress"
        mc:Ignorable="d"
        Title="SKI's QuickCompress" Height="588" Width="430"
        WindowStartupLocation="CenterScreen">
        
    <StackPanel Orientation="Vertical" Margin="12">
        <Label Name="Video_Name" Content="Vídeo: "></Label>

        <StackPanel Orientation="Horizontal" Background="#FFEAEAEA">
            <Label FontSize="20" Content="Taxa de Bits: " VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label Name="Bit_Rate_Text" Content="0 kbps" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" FontSize="18" VerticalAlignment="Center"/> <!-- Updated when any setting is changed. -->
            <Label Name="Bit_Rate_Description_Text" Content="(Bom)" HorizontalContentAlignment="Right" FlowDirection="RightToLeft" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" VerticalAlignment="Center"/> <!-- Show the bit rate condition. -->
        </StackPanel>
    </StackPanel>
</Window>
